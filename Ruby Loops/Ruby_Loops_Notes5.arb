# Iterating Through Strings with Loops

str = "hello"
puts str[0]
puts str[1]
puts str[4]

str = "hello"
i = 2
puts str[i]

str = "hello"

i = 0
while i < 5
    puts str[i]

    i += 1
end
end

str = "hello world"

i = 0
while i < str.length
    puts str[i]

    i += 1
end
end

def printChars(str)
